<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tin nổi bật"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/colorPrimary"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="8dp"
            android:id="@+id/home_viewpager">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOP 1 BXH"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>


            <TableRow android:layout_width="match_parent"
                android:padding="16dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Nhóm nhạc nam"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textStyle="bold"/>

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/yes"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BTS"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>


            <TableRow android:layout_width="match_parent"
                android:padding="16dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Nhóm nhạc nữ"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textStyle="bold"/>

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/yes"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BTS"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>


            <TableRow android:layout_width="match_parent"
                android:padding="16dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Visual nam"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textStyle="bold"/>

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/yes"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hwang Min Hyun"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>


            <TableRow android:layout_width="match_parent"
                android:padding="16dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Visual nữ"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textStyle="bold"/>

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/yes"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tzuyu"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>


            <TableRow android:layout_width="match_parent"
                android:padding="16dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Bài hát yêu thích"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:textStyle="bold"/>

                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/yes"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yes or yes"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>

            </TableRow>



        </LinearLayout>


    </LinearLayout>

</ScrollView>